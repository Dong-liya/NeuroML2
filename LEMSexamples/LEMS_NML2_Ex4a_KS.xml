<Lems>

    <!-- Example comparing cells with:
         - kinetic scheme based K+ channel (fwd / rev rates)
         - kinetic scheme based K+ channel (tau / inf)
         - classic hh K+  channel -->

    <!-- This is a file which can be read and executed by the LEMS Interpreter.
         It imports the LEMS definitions of the core NeuroML 2 Components, creates
         a model in "pure" NeuroML 2 and contains some LEMS elements for running
         a simulation -->

    <!-- Specify which component to run -->
    <Target component="sim1"/>

    <!-- Include core NeuroML2 ComponentType definitions -->
    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>



    <!-- that's just the classic HH potassium channel -->
    <ionChannelHH conductance="10pS" id="k" species="k">
        <gateHHrates id="n" instances="4">
            <forwardRate midpoint="-55mV" rate="0.1per_ms" scale="10mV" type="HHExpLinearRate"/>
            <reverseRate midpoint="-65mV" rate="0.125per_ms" scale="-80mV" type="HHExpRate"/>
        </gateHHrates>
    </ionChannelHH>


    <!-- that's the same channel as above, but expressed as a KS instead -->
    <ionChannelKS conductance="10pS" id="k_fwd_rev">
        <gateKS id="n" instances="4">
            <closedState id="c1"/>
            <openState id="o1"/>

            <forwardTransition from="c1" id="ft" to="o1">
                <rate id="f1" midpoint="-55mV" rate="0.1per_ms" scale="10mV" type="HHExpLinearRate"/>
            </forwardTransition>

            <reverseTransition from="c1" id="rt" to="o1">
                <rate id="r1" midpoint="-65mV" rate="0.125per_ms" scale="-80mV" type="HHExpRate"/>
            </reverseTransition>

        </gateKS>
    </ionChannelKS>


    <!-- that's the same channel as above, but its rates are expressed in terms of inf, tau (defined below) -->
    <ionChannelKS conductance="10pS" id="k_tau_inf">
        <gateKS id="n" instances="4">

            <closedState id="c1"/>
            <openState id="o1"/>

            <tauInfTransition from="c1" id="tauinf" to="o1">
                <steadyState id="inf" type="n_inf"/>
                <timeCourse id="tau" type="n_tau"/>
            </tauInfTransition>

        </gateKS>
    </ionChannelKS>


    <ComponentType extends="baseVoltageDepTime" name="n_tau">
        <Constant dimension="per_time" name="alpha_rate" value="0.1 per_ms"/>
        <Constant dimension="voltage" name="alpha_midpoint" value="-55mV"/>
        <Constant dimension="voltage" name="alpha_scale" value="10 mV"/>
        <Constant dimension="per_time" name="beta_rate" value="0.125 per_ms"/>
        <Constant dimension="voltage" name="beta_midpoint" value="-65mV"/>
        <Constant dimension="voltage" name="beta_scale" value="-80 mV"/>

        <Dynamics>
            <DerivedVariable dimension="none" name="x" value="(v - alpha_midpoint) / alpha_scale"/>
            <DerivedVariable dimension="per_time" name="alpha" value="alpha_rate * x / (1 - exp(0 - x))"/>
            <DerivedVariable dimension="per_time" name="beta" value="beta_rate * exp((v - beta_midpoint)/beta_scale)"/>
            <DerivedVariable dimension="time" name="t" value="1/(alpha+beta)"/>
        </Dynamics>
    </ComponentType>


    <ComponentType extends="baseVoltageDepVariable" name="n_inf">
        <Constant dimension="per_time" name="alpha_rate" value="0.1 per_ms"/>
        <Constant dimension="voltage" name="alpha_midpoint" value="-55mV"/>
        <Constant dimension="voltage" name="alpha_scale" value="10 mV"/>
        <Constant dimension="per_time" name="beta_rate" value="0.125 per_ms"/>
        <Constant dimension="voltage" name="beta_midpoint" value="-65mV"/>
        <Constant dimension="voltage" name="beta_scale" value="-80 mV"/>

        <Dynamics>
            <DerivedVariable dimension="none" name="X" value="(v - alpha_midpoint) / alpha_scale"/>
            <DerivedVariable dimension="per_time" name="alpha" value="alpha_rate * X / (1 - exp(0 - X))"/>
            <DerivedVariable dimension="per_time" name="beta" value="beta_rate * exp((v - beta_midpoint)/beta_scale)"/>
            <DerivedVariable dimension="none" name="x" value="alpha/(alpha+beta)"/>
        </Dynamics>
    </ComponentType>


    <ionChannelHH conductance="10pS" id="na">

        <gateHHrates id="m" instances="3">
            <forwardRate midpoint="-40mV" rate="1.per_ms" scale="10mV" type="HHExpLinearRate"/>
            <reverseRate midpoint="-65mV" rate="4per_ms" scale="-18mV" type="HHExpRate"/>
        </gateHHrates>

        <gateHHrates id="h" instances="1">
            <forwardRate midpoint="-65.mV" rate="0.07per_ms" scale="-20.mV" type="HHExpRate"/>
            <reverseRate midpoint="-35mV" rate="1per_ms" scale="10mV" type="HHSigmoidRate"/>
        </gateHHrates>

    </ionChannelHH>


    <ionChannel id="leak" type="ionChannelPassive" conductance="10pS" species="non_specific"/>


    <!-- cell definitions -->
    <cell C="1pF" id="hhcell_classic" thresh="-20mV" type="pointCellCondBased" v0="-65mV">
        <channelPopulation erev="50mV" id="na_chans" ionChannel="na" number="6000"/>
        <channelPopulation erev="-77mV" id="k_chans" ionChannel="k" number="1800"/>
    </cell>


    <cell C="1pF" id="hhcell_KS_fwd_rev" thresh="-20mV" type="pointCellCondBased" v0="-65mV">
        <channelPopulation erev="50mV" id="na_chans" ionChannel="na" number="6000"/>
        <channelPopulation erev="-77mV" id="k_chans" ionChannel="k_fwd_rev" number="1800"/>
    </cell>


    <cell C="1pF" id="hhcell_KS_tau_inf" thresh="-20mV" type="pointCellCondBased" v0="-65mV">
        <channelPopulation erev="50mV" id="na_chans" ionChannel="na" number="6000"/>
        <channelPopulation erev="-77mV" id="k_chans" ionChannel="k_tau_inf" number="1800"/>
    </cell>
   

    <pulseGenerator amplitude="0.005 nA" delay="100ms" duration="100ms" id="pulseGen1"/>


    <network id="net1">
        <population component="hhcell_classic" id="hh_classic_pop" size="1"/>
        <explicitInput destination="synapses" input="pulseGen1" target="hh_classic_pop[0]"/>

        <population component="hhcell_KS_fwd_rev" id="hh_KS_fwd_rev_pop" size="1"/>
        <explicitInput destination="synapses" input="pulseGen1" target="hh_KS_fwd_rev_pop[0]"/>

        <population component="hhcell_KS_tau_inf" id="hh_KS_tau_inf_pop" size="1"/>
        <explicitInput destination="synapses" input="pulseGen1" target="hh_KS_tau_inf_pop[0]"/>
    </network>


    <Simulation id="sim1" length="300ms" step="0.01ms" target="net1">

        <Display timeScale="1ms" title="Ex4a: Kinetic scheme descriptions for K+ channel: voltage" xmax="330" xmin="-30" ymax="60" ymin="-90">
            <Line color="#ff0000" id="v" quantity="hh_classic_pop[0]/v" scale="1mV" timeScale="1ms"/>
            <Line color="#00ff00" id="v_fr" quantity="hh_KS_fwd_rev_pop[0]/v" scale="1mV" timeScale="1ms"/>
            <Line color="#0000ff" id="v_ti" quantity="hh_KS_tau_inf_pop[0]/v" scale="1mV" timeScale="1ms"/>
        </Display>

        <Display timeScale="1ms" title="Ex4: Kinetic scheme description for K+ channels: channel variables" xmax="330" xmin="-30" ymax="1.1" ymin="-0.1">
            <!-- <Line color="#ff00ff" id="m" quantity="hh_classic_pop[0]/na_chans/na/m/q" scale="1" timeScale="1ms"/> -->
            <!-- <Line color="#ffffff" id="h" quantity="hh_classic_pop[0]/na_chans/na/h/q" scale="1" timeScale="1ms"/> -->
            <Line color="#ff0000" id="n" quantity="hh_classic_pop[0]/k_chans/k/n/q" scale="1" timeScale="1ms"/>
            <Line color="#00ff00" id="n_fr" quantity="hh_KS_fwd_rev_pop[0]/k_chans/k_fwd_rev/n/q" scale="1" timeScale="1ms"/>
            <Line color="#0000ff" id="n_ti" quantity="hh_KS_tau_inf_pop[0]/k_chans/k_tau_inf/n/q" scale="1" timeScale="1ms"/>
        </Display>

        <Display timeScale="1ms" title="Ex4: Kinetic scheme description for K+ channel: states of k" xmax="330" xmin="-30" ymax="1.1" ymin="-0.1">
            <Line color="#ff0000" id="c1_fr" quantity="hh_KS_fwd_rev_pop[0]/k_chans/k_fwd_rev/n/c1/occupancy" scale="1" timeScale="1ms"/>
            <Line color="#00ff00" id="o1_fr" quantity="hh_KS_fwd_rev_pop[0]/k_chans/k_fwd_rev/n/o1/occupancy" scale="1" timeScale="1ms"/>

            <Line color="#991111" id="c1_ti" quantity="hh_KS_tau_inf_pop[0]/k_chans/k_tau_inf/n/c1/occupancy" scale="1" timeScale="1ms"/>
            <Line color="#119911" id="o1_ti" quantity="hh_KS_tau_inf_pop[0]/k_chans/k_tau_inf/n/o1/occupancy" scale="1" timeScale="1ms"/>
        </Display>

    </Simulation>

</Lems>
